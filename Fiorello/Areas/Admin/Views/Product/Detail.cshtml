@model ProductDetailVM

@{
    ViewData["Title"] = "Detail";
}


<div class="container my-5">
    <h1 class="text-center">Product Detail</h1>
    <div class="images my-3">
        @foreach (var item in Model.Images)
        {
            <img src="~/img/@item" style="width:250px; height:450px; margin-right:20px"/>
        }
    </div>
    <div class="detail">
        <h4>@Model.Name</h4>
        <p>Description: @Model.Description</p>
        <p>Price: @Model.Price</p>
        <p>Discount Name: @Model.DiscountName</p>
        <p>Category: @Model.CategoryName</p>
        <p>Create Date: @Model.CreateDate</p>
    </div>
    <a class="btn btn-primary mt-3" asp-action="Index">Back</a>
</div>