@model List<ProductVM>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <h1 class="text-center">Products</h1>
    <a class="btn btn-success my-4" asp-action="Create">Create</a>
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Basic Table</h6>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Category</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/img/@item.Image" style="width:100px;height:150px"/></td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price.ToString("0.####") ₼</td>
                        <td>@item.DiscountName</td>
                        <td>@item.CategoryName</td>
                        <td style="display: flex;flex-direction: column;justify-content: space-between;align-items: center;height: 166px;">
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
                            <a href="" class="btn btn-warning mx-3">Edit</a>
                            <form method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>