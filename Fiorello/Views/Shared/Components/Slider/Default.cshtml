@model SliderVM

<section id="slider">
    <div class="owl-carousel slider">
        @foreach (var item in Model.Sliders)
        {
            <div> <img src="img/@item.Image" style="height:500px" alt=""> </div>
        }
    </div>
    <div class="container context pl-lg-5 ml-lg-3">
        <div class="row">
            <div class="col-lg-5">
                <div class="text">
                    @Html.Raw(Model.SliderDetail.Title)
                    <p class="text-black-50 d-none d-sm-block">@Model.SliderDetail.Description</p>
                </div>
                <div class="img">
                    <img src="img/@Model.SliderDetail.SignImage" alt="" style="width:100px;height:50px">
                </div>
            </div>
        </div>
    </div>
</section>