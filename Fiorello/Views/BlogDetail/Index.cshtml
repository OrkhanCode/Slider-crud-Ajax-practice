@model Blog

@{
    ViewData["Title"] = "Blog Detail";
}

<img src="~/img/@Model.Image" style="width:400px;height:300px;margin-left:207px;margin-top:50px;margin-bottom:50px"/>

<h1 style="margin-left:207px">@Model.Name</h1>
<p style="margin-left:207px">@Model.Description</p>
<p style="margin-left:207px">Created Date: @Model.CreatedDate.ToString("dd/MM/yyyy")</p>